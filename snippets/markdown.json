{
  // Place your snippets for markdown here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "vsnote_template_tags": {
    "prefix": "vsnote_template_tags",
    "body": ["---", "tags:", " - $1", "---", "\n"],
    "description": "Template with Tags"
  },
  "vsnote_template_marp": {
    "prefix": "vsnote_template_marp",
    "body": [
      "---",
      "",
      "marp: true",
      "theme: gaia",
      "header: \"${1:Title}\"",
      "footer: \"by Kento Nakano\"",
      "paginate: true",
      "backgroundColor: #2F3232",
      "color: #ffffff",
      "",
      "---",
      "<!--",
      "_class: lead",
      "_paginate: false",
      "_header: \"\"",
      "-->",
      "# ${1:Title}",
      "by Kento Nakano",
      "",
      "---",
      "## ${2:Title}",
      "${0:content}"
    ],
    "description": "marp"
  },
  "vsnote_template_mymeeting": {
    "prefix": "vsnote_template_mymeeting",
    "body": [
      "---",
      "title: $TM_FILENAME_BASE",
      "date: $CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE",
      "tags:",
      "  - meeting",
      "---",
      "## Meeting $CURRENT_YEAR/$CURRENT_MONTH/$CURRENT_DATE",
      "$2"
    ],
    "description": "Template for blog"
  },
  "code cpp": {
    "prefix": "code cpp",
    "body": ["```cpp", "${0:int main();}", "```"],
    "description": "code cpp"
  },
  "code python": {
    "prefix": "code python",
    "body": ["```python", "${0:print(\"Hello Wolrd\")}", "```"],
    "description": "code python"
  }
}
